<style>
  .nav-megamenu {
    position: absolute;
    left: 0;
    top: 100%;
    width: 100%;
    background: #fff;
    margin-top: 1px;
  }
  .nav-megamenu .page-wrapper {
    display: grid;
    grid-template-columns: repeat(6, minmax(0, 1fr));
    margin-inline: auto;
    align-items: flex-start;
    padding: 30px 20px;
  }
  .nav-megamenu .nav-megamenu_child {
    position: static;
    margin-top: 10px;
    display: block;
  }
  .nav-megamenu_heading {
    font-weight: 600;
  }
  .nav-megamenu_child a {
    display: block;
    padding: 6px 0;
    font-size: 15px;
    line-height: 1.5;
  }
</style>
<ul>
  {% for link in section.settings.menu.links %}
    <li>
      {% if link.links != blank %}
        <details>
          <summary>
            {{- link.title | escape -}}
            {{- 'icon-caret.svg' | inline_asset_content -}}
          </summary>
          <div class="nav-megamenu color-{{ section.settings.menu_color_scheme }} gradient">
            <ul class="page-wrapper" role="list">
              {%- for childlink in link.links -%}
                <li>
                  <a
                    href="{{ childlink.url }}"
                    class="nav-megamenu_heading"
                    {% if childlink.current %}
                      aria-current="page"
                    {% endif %}
                  >
                    {{ childlink.title | escape }}
                  </a>
                  {%- if childlink.links != blank -%}
                    <ul class="nav-megamenu_child" role="list">
                      {%- for grandchildlink in childlink.links -%}
                        <li>
                          <a
                            href="{{ grandchildlink.url }}"
                            {% if grandchildlink.current %}
                              aria-current="page"
                            {% endif %}
                          >
                            {{ grandchildlink.title | escape }}
                          </a>
                        </li>
                      {%- endfor -%}
                    </ul>
                  {%- endif -%}
                </li>
              {%- endfor -%}
            </ul>
          </div>
        </details>
      {% else %}
        <a
          href="{{ link.url }}"
          {% if link.current %}
            aria-current="page"
          {% endif %}
        >
          {{- link.title | escape -}}
        </a>
      {% endif %}
    </li>
  {% endfor %}
</ul>
