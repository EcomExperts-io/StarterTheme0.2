        <div class="badge">$0 - $50 <span class="remove">&times;</span></div>
      </div>
    </div>

    <div class="filter">
      <h3 class="collapsible">Category</h3>
      <ul class="content">
        <li><input type="checkbox" id="category1"><label for="category1">Category 1</label></li>
        <li><input type="checkbox" id="category2"><label for="category2">Category 2</label></li>
        <li><input type="checkbox" id="category3"><label for="category3">Category 3</label></li>
        <li><input type="checkbox" id="category1"><label for="category1">Category 1</label></li>
        <li><input type="checkbox" id="category2"><label for="category2">Category 2</label></li>
        <li><input type="checkbox" id="category3"><label for="category3">Category 3</label></li>
      </ul>
    </div>
    <div class="filter">
      <h3 class="collapsible">Price</h3>
      <ul class="content">
        <li><input type="checkbox" id="price1"><label for="price1">$0 - $50</label></li>
        <li><input type="checkbox" id="price2"><label for="price2">$50 - $100</label></li>
        <li><input type="checkbox" id="price3"><label for="price3">$100 - $200</label></li>
      </ul>
    </div>
  </aside>
  <div class="content">
    <div class="controls">
      <a href="#" class="remove-all-filters">Remove All Filters</a>
      <div class="sort-dropdown">
        <button class="sort-button">Sort By</button>
        <div class="sort-content">
          <a href="#">Price: Low to High</a>
          <a href="#">Price: High to Low</a>
          <a href="#">Newest Arrivals</a>
        </div>
      </div>
    </div>

    <div class="grid">
      <div class="grid-item">Item 1</div>
      <div class="grid-item">Item 2</div>
      <div class="grid-item">Item 3</div>
      <div class="grid-item">Item 4</div>
      <div class="grid-item">Item 5</div>
      <div class="grid-item">Item 6</div>
      <div class="grid-item">Item 1</div>
      <div class="grid-item">Item 2</div>
      <div class="grid-item">Item 3</div>
      <div class="grid-item">Item 4</div>
      <div class="grid-item">Item 5</div>
      <div class="grid-item">Item 6</div>
    </div>
    <div class="pagination">
      <a href="#">&laquo;</a>
      <a href="#">1</a>
      <a href="#">2</a>
      <a href="#">3</a>
      <a href="#">4</a>
      <a href="#">5</a>
      <a href="#">&raquo;</a>
    </div>
  </div>
  {% comment %}
    <div class="content">
      <div id="ProductGridContainer">
        {%- paginate collection.products by section.settings.products_per_page -%}
          <h1>{{ section.id }}</h1>

          <div>
            {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
            <select>
              {%- for option in collection.sort_options -%}
                <option
                  value="{{ option.value | escape }}"
                  {% if option.value == sort_by %}
                    selected="selected"
                  {% endif %}
                >
                  {{ option.name | escape }}
                </option>
              {%- endfor -%}
            </select>
          </div>
          <div>
            <aside class="grid">
              {% for f in collection.filters %}
                <div>
                  {{ f.label }}
                  {% if f.active_values.size > 0 %}
                    <a
                      onclick="event.preventDefault(); getSection('{{ f.url_to_remove }}');"
                      href="{{ f.url_to_remove }}"
                      >reset</a
                    >
                    ({{ f.active_values.size }})
                  {% endif %}
                  <br>
                  {% for v in f.values %}
                    <div>
                      <label for="{{ v.param_name }}_{{ forloop.index }}">
                        <input
                          type="checkbox"
                          id="{{ v.param_name }}_{{ forloop.index }}"
                          {% if v.active %}
                            checked
                            onclick="getSection('{{ v.url_to_remove }}')"
                          {% else %}
                            onclick="getSection('{{ v.url_to_add }}')"
                          {% endif -%}
                          {% if v.count == 0 and v.active == false %}
                            disabled
                          {% endif -%}
                        >
                        {{ v.label }} ({{ v.count }})
                      </label>
                    </div>
                  {% endfor %}
                </div>
                <br>
              {% endfor %}
            </aside>

            <div>
              <a
                onclick="event.preventDefault(); getSection('{{ collection.url }}?view=custom')"
                href="{{ collection.url }}?view=custom"
              >
                Remove All
              </a>
            </div>

            <div>
              {%- for f in collection.filters -%}
                {% for v in f.active_values %}
                  <a
                    onclick="event.preventDefault(); getSection('{{ v.url_to_remove }}')"
                    href="{{ v.url_to_remove }}"
                  >
                    {{ f.label | escape }}: {{ v.label | escape -}}</a
                  ><br>
                {% endfor %}
              {%- endfor -%}
            </div>

            <div>
              <span>
                {%- if collection.products_count == collection.all_products_count -%}
                  {{ collection.products_count }} products
                {% else %}
                  {{ collection.products_count }} of {{ collection.all_products_count }}
                {% endif %}
              </span>
            </div>
            <div>
              {%- if collection.products.size == 0 -%}
                <p>Nothing Here</p>
              {%- else -%}
                <div>
                  <ul class="grid">
                    {% assign skip_card_product_styles = false %}
                    {%- for product in collection.products -%}
                      {% assign lazy_load = false %}
                      {%- if forloop.index > 2 -%}
                        {%- assign lazy_load = true -%}
                      {%- endif -%}
                      <li class="grid__item">
                        <a href="{{ product.handle }}">{{ product.title }}</a>
                        {% comment %}
                          {% render 'card-product',
                            card_product: product,
                            media_aspect_ratio: section.settings.image_ratio,
                            image_shape: section.settings.image_shape,
                            show_secondary_image: section.settings.show_secondary_image,
                            show_vendor: section.settings.show_vendor,
                            show_rating: section.settings.show_rating,
                            lazy_load: lazy_load,
                            skip_styles: skip_card_product_styles,
                            quick_add: section.settings.quick_add,
                            section_id: section.id
                          %}
                        {% endcomment %}
                      </li>
                      {%- assign skip_card_product_styles = true -%}
                    {%- endfor -%}
                  </ul>
                  {%- if paginate.pages > 1 -%}
                    {% render 'pagination', paginate: paginate, anchor: '' %}
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          </div>
        {%- endpaginate -%}
      </div>
    </div>
  {% endcomment %}
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var coll = document.getElementsByClassName('collapsible');
    for (var i = 0; i < coll.length; i++) {
      coll[i].addEventListener('click', function () {
        this.classList.toggle('active');
        var content = this.nextElementSibling;
        if (content.style.display === 'block') {
          content.style.display = 'none';
        } else {
          content.style.display = 'block';
        }
      });
    }
  });

  function getSection(url) {
    fetch(url + '&section_id={{ section.id }}')
      .then((response) => response.text())
      .then((responseText) => {
        history.pushState({}, '', url);
        document.getElementById('ProductGridContainer').innerHTML = new DOMParser()
          .parseFromString(responseText, 'text/html')
          .getElementById('ProductGridContainer').innerHTML;
      });
  }
</script>
